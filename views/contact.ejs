<%- include('includes/head.ejs') %>
</head>
<body>
    <%- include('includes/navigation.ejs') %>
    <div id="page-container">
        <div id="content-wrapper">
            <h2 class="text-center my-4">Contact Us</h2>
            <p class="contact-msg">Please feel free to contact us by phone or fill out the form below to send us a message. We look forward to hearing from you.</p>
            <div class="contact-info">
                <div>
                    <h5>Phone Number</h5>
                    <span>(859) 689 - 4444</span>
                </div>
                <div>
                    <h5>Fax</h5>
                    <span>(859) 689 - 4448</span>
                </div>
                <div>
                    <h5>Office Hours</h5>
                    <ul>
                        <li>M-F: 10:00am - 5:00pm</li>
                        <li>Saturday: 10:00am - 2:00pm</li>
                        <li>Sunday: closed</li>
                     </ul>
                </div>
            </div>

            <div class="container bg-light">
                <form action="" method="POST" class="p-3">
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label for="firstNameInput">First Name</label>
                            <input type="text" name="firstName" class="form-control" id="firstNameInput" placeholder="First Name*">
                        </div>
                        <div class="form-group col-sm-6">
                            <label for="">Last Name</label>
                            <input type="text" name="lastName" id="lastNameInput" class="form-control" placeholder="Last Name*">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="emailInput">Email</label>
                        <input type="email" name="email" id="emailInput" class="form-control" placeholder="Email*">
                    </div>
                    <div class="form-group">
                        <label for="phoneInput">Phone #</label>
                        <input type="text" name="phone" id="phoneInput" class="form-control" placeholder="Phone*">
                    </div>
                    <div class="form-group">
                        <label for="messageInput">Message</label>
                        <textarea name="message" id="" cols="30" rows="10" class="form-control" placeholder="Enter Your Message Here*"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Submit Your Message</button>
                </form>
            </div>
        </div>
    <%- include('includes/footer.ejs') %>
    </div>